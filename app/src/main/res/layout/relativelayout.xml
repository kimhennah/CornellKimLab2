<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/manila_cathedral" />

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="217dp"
        android:text="Manila Cathedral"
        android:textColor="#000000"
        android:textSize="18sp"
        app:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="167dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Cabildo cor Beaterio Intramuros, Manila, Luzon 1002 Philippines"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_alignBottom="@id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:text="3.6 km from University of Santo Tomas"
        android:textColor="#000000"
        android:textSize="12sp" />

    <Button
        android:id="@+id/back2"
        android:layout_alignBottom="@id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="73dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:text="Back" />
    <Button
        android:id="@+id/next"
        android:layout_alignRight="@id/back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/back2"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:text="Next" />

</RelativeLayout>